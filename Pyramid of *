// Pyramid of ****
#include <stdio.h>

int main() {
    //int sum = 1;
    
    for(int i = 1; i <=5;++i)
{
    printf(" * ");
}
    printf("\n");
    for(int i = 1; i <=4;++i)
{
    printf(" * ");
}
    printf("\n");
        for(int i = 1; i <=3;++i)
{
    printf("  *");
}
    printf("\n");
        for(int i = 1; i <=2;++i)
{
    printf("   *");
}
printf("\n");
    for(int i = 1; i <=1;++i)
{
    printf("     *");
}
    return 0;
}
