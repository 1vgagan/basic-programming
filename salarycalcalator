// Online C compiler to run C program online
#include <stdio.h>
int salarycalculator(int,int,int,char*);
int main() {    
    
    char des[] = "pikku";

    int ta=1000,da=1000,basic=1000,salary;
    salary = salarycalculator(ta,da,basic,des);
    printf("salary is %d",salary);
return 0;
}
int salarycalculator(int ta,int da,int basicsalary,char *designation)
{
    int salary;
    salary=ta+da+basicsalary;   
    printf("salary is %d %s \n",salary, designation);
   return salary;
}
